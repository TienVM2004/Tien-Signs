<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Buttons Layout -->
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Load Picture Button -->
        <Button
            android:id="@+id/button_load_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Load Picture" />

        <!-- Load Video Button -->
        <Button
            android:id="@+id/button_load_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Load Video" />

        <!-- Start Camera Button -->
        <Button
            android:id="@+id/button_start_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Camera" />

    </LinearLayout>

    <!-- Preview Display Layout -->
    <FrameLayout
        android:id="@+id/preview_display_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000">
        <!-- Camera preview added dynamically -->
    </FrameLayout>

    <!-- Text Layout Below the Camera Feed -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TextView to display the inferred letter -->
        <TextView
            android:id="@+id/text_inferred_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:gravity="center"
            android:text="Letter"
            android:textColor="#000000"
            android:textSize="48sp" />
        <TextView
            android:id="@+id/text_detected_signs_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@id/text_inferred_letter"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>
